#!/usr/bin/env bash

screen_on=true
screen_undim=true
speaker_unmute=false
mic_unmute=false
ssh_add=true

[ -r $HOME/.config/screenunlockrc ] && source $HOME/.config/screenunlockrc

pgrep -u $LOGNAME -f -- "$locker" || exit

rm -f /run/user/$EUID/.manual_lock
$screen_on      && wm-screen-on
$screen_undim   && wm-screen-undim
$speaker_unmute && speaker-unmute -c
$mic_unmute     && mic-unmute
$ssh_add        && wm-ssh-add

