        "return-type": "json",
        "exec-if": "test -x ~/.config/waybar/scripts/idle-blockers",
        "exec": "~/.config/waybar/scripts/idle-blockers loop"
    },

    "custom/laptopbattery": {
        "hide-empty-text": true,
        "format": "{}% {icon}",
