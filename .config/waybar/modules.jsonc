// -*- mode: jsonc -*-
{
    "hyprland/workspaces": {
        "format": "{icon}",
        "format-icons": {
            "10": "0",
            "11": "-",
            "12": "="
        }
    },

    "hyprland/window": {
        "on-click": "~/.config/nwg/scripts/run-drawer",
        "separate-outputs": true,
        "icon": true,
        "icon-size": 18
    },

    "sway/workspaces": {
        "format": "{icon}",
        "format-icons": {
            "10": "0",
            "11": "-",
            "12": "="
        }
    },

    "sway/window": {
        "on-click": "$HOME/.local/bin/run_nwg_drawer",
        "separate-outputs": true,
        "icon": true,
        "icon-size": 18
    },

    "niri/workspaces": {
        "format": "<span size='larger'>{icon}</span>",
        "format-icons": {
            "active": "\uf444",
            "default": "\uf4c3"
        }
    },

    "niri/window": {
        "on-click": "$HOME/.local/bin/run_nwg_drawer",
        "separate-outputs": true,
        "icon": true,
        "icon-size": 18
    },

    // Custom Modules
    "custom/clock": {
        "hide-empty-text": true,
        "format": "{}",
        "return-type": "json",
        "exec-if": "test -x ~/.config/waybar/scripts/clock",
        "exec": "~/.config/waybar/scripts/clock loop"
    },

