[Unit]
Description=Sways Background Image
Documentation=https://man.archlinux.org/man/swaybg.1
PartOf=graphical-session.target
After=graphical-session.target
ConditionEnvironment=WAYLAND_DISPLAY

[Service]
Type=simple
ExecStart=/usr/bin/swaybg -o '*' -i %h/.config/wallpaper.png
Restart=on-failure

[Install]
WantedBy=graphical-session.target
